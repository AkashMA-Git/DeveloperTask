@model Product


<div class="card shadow border-0 mt-4 ">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Products</h2>

            </div>
        </div>
        <div class="card-body py-4">
            <form method="post" class="row" asp-action="Create">
                <div class="border p-3 mt-4">

                    <div class="row mb-3 p-1">
                        <label asp-for="ProductName" class="p-0"></label>
                        <input asp-for="ProductName" class="form-control">
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 p-1">
                        <label asp-for="Price" class="p-0"></label>
                        <input asp-for="Price" class="form-control">
                        <span asp-validation-for="Price" class="text-danger"></span>

                    </div>
                    <div class="row mb-3 p-1">
                        <label asp-for="Quantity" class="p-0"></label>
                        <input asp-for="Quantity" class="form-control">
                        <span asp-validation-for="Quantity" class="text-danger"></span>

                    </div>

                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                                Back To List
                            </a>
                        </div>
                    </div>
                </div>
            </form>

        </div>

    </div>


</div>

@section Scripts {
    @{
        <partial name="_validationScriptsPartial" \ />
    }
}