@model Product

<form method="post" asp-action="Delete">
    <input asp-for="ProductId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Products </h2>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="ProductName" class="p-0"></label>
            <input asp-for="ProductName" disabled class="form-control">
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" disabled class="form-control">

        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Quantity" class="p-0"></label>
            <input asp-for="Quantity" disabled class="form-control">

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_validationScriptsPartial" \ />
    }
}